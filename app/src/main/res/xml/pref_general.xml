<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/location"
        android:key="@string/locationKey"
        android:defaultValue="@string/locationDefault"
        android:inputType="text"
        android:singleLine="true"
        />
    <ListPreference
        android:title="@string/unit"
        android:key="@string/unitKey"
        android:defaultValue="@string/unitDefault"
        android:entries="@array/units"
        android:entryValues="@array/units_values"
        />

</PreferenceScreen>